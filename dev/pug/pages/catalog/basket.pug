.catalog__basket.basket
  .basket__head
    h2.basket__title.title.title--size-small.title--color-white КОРЗИНА
    +icon('save', 'basket__head-icon')
  .basket__main
    ul.basket__list
      li.basket__item
        .basket__item-top
          h3.basket__item-title Суп-лапша домашняя <br> с курицей
          +icon('close', 'basket__item-icon')
        .basket__item-bottom
          .basket__item-info
            span.basket__item-text 350 гр.
            span.basket__item-text 150 Ккал
          .counter.basket__counter
            button.counter__btn(data-direction="minus")
              +icon('minus', 'counter__icon')
            input(value="1" disabled).counter__input
            button.counter__btn(data-direction="plus")
              +icon('plus', 'counter__icon')
          span.basket__price 150 р
      li.basket__item
        .basket__item-top
          h3.basket__item-title Треска отварная с <br> картофелем и соусом <br> из шпината
          +icon('close', 'basket__item-icon')
        .basket__item-bottom
          .basket__item-info
            span.basket__item-text 350 гр.
            span.basket__item-text 150 Ккал
          .counter.basket__counter
            button.counter__btn(data-direction="minus")
              +icon('minus', 'counter__icon')
            input(value="1" disabled).counter__input
            button.counter__btn(data-direction="plus")
              +icon('plus', 'counter__icon')
          span.basket__price 120 р
      li.basket__item
        .basket__item-top
          h3.basket__item-title Суп-лапша домашняя <br> с курицей
          +icon('close', 'basket__item-icon')
        .basket__item-bottom
          .basket__item-info
            span.basket__item-text 350 гр.
            span.basket__item-text 150 Ккал
          .counter.basket__counter
            button.counter__btn(data-direction="minus")
              +icon('minus', 'counter__icon')
